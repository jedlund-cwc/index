    <script>
        // JavaScript for simple interactivity and dynamic content
        
        // 1. Dynamic Footer Date
        const dateElement = document.getElementById('footer-date');
        const currentYear = new Date().getFullYear();
        dateElement.innerText = currentYear;

        // 2. Button Interaction
        function showOfficeHours() {
            // In a real scenario, this might fetch data from a server. 
